@page
@model FitnesAP.Pages.MyWorkoutsModel
@{
    ViewData["Title"] = "Moji Treningi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Moji Treningi</h1>
        <a asp-page="/CreateWorkout" class="btn btn-primary btn-lg">+ Ustvari nov trening</a>
    </div>

    @if (Model.UserWorkouts.Count == 0)
    {
        <div class="alert alert-info">
            Nimaš še treningov. Klikni gumb zgoraj in začni!
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var workout in Model.UserWorkouts)
            {
                <div class="list-group-item list-group-item-action flex-column align-items-start mb-3 border shadow-sm rounded">
                    <div class="d-flex w-100 justify-content-between align-items-center">

                        <h5 class="mb-1">
                            <a asp-page="/TrackWorkouts" asp-route-id="@workout.Id" class="text-decoration-none text-primary">
                                @workout.Name
                            </a>
                        </h5>

                        <form method="post" asp-page-handler="Delete" asp-route-id="@workout.Id" onsubmit="return confirm('Ali res želiš izbrisati ta trening?');">
                            <button type="submit" class="btn btn-danger btn-sm" style="line-height: 1;">
                                &times;
                            </button>
                        </form>

                    </div>

                    <p class="mb-1 mt-2">
                        <strong>Vaje:</strong>
                        @foreach (var ex in workout.Exercises)
                        {
                            <span class="badge bg-secondary me-1">@ex.Name</span>
                        }
                    </p>
                </div>
            }
        </div>
    }
</div>